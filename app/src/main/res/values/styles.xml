<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffff9431</item>
        <item name="colorPrimaryDark">#ffD56600</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <style name="button_1">
        <item name="android:background">@drawable/button_1</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="T2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="T1">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginTop">8sp</item>
    </style>

    <style name="maly">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">8sp</item>
    </style>
    <style name="edit_text">
        <item name="android:paddingLeft">6sp</item>
        <item name="android:paddingRight">6sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginRight">4sp</item>
        <item name="android:layout_marginLeft">4sp</item>
        <item name="android:background">@drawable/edittextstyle</item>
    </style>

</resources>
